    <title>Медовый Папа</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/market.css" type="text/css">
    <link rel="icon" href="/logo.png" type="image/x-icon">
</head>
<body>
    <%- include('blocks/header') -%>
    <%- include('blocks/upward') -%>
    <div class="container-shop">
        
        <div class="catalog"> <!--Не забыть подключить каждый товар к поиску (хедер)-->
            <div class="filter-price">
                <v-select
                    :selected:="selected"
                    :options:="categories"
                    @select="sortByCategories"
                >
                <div class="range-slider">
                    <input type="range" min="0" max="1000" step="10" v-model.number="">
                </div>
            </div> <!--Сортировка по цене (пользователь выставляет сам цену https://woodmart.xtemos.com/shop/?per_row=3&shop_view=grid)-->
            <hr>
            <div class="filter-category"> <!--Сортировка по категориям (продавец может создавать категории и добавлять буда товар)-->
                <h2>Категории</h2>
                <div class="category-line">
                    <ul>
                        <li>Напитки</li>
                        <li>Узвар</li>
                        <li>Мёд
                            <input type="checkbox" id="hd-1" class="hide"/>
                            <label for="hd-1" >Мёд</label>
                            <div class="under-caregory">
                                <ul>
                                    <li>Липовый</li>
                                    <li>Цветочный</li>
                                    <li>Еловый</li>
                                </ul>
                            </div>
                            
                        </li>
                    </ul>
                </div>
                <hr>
            </div> 
            <div class="product-status"> <!--Статус "В продаже" и "В наличии"-->

            </div>
        </div>
        <div class="goods">
            <div class="sort"> <!--Сортировка по: Дефолт (как составлял продавец), популярности, лучший рейтинг, последние добавления, по цене: с низкой до высокой и наоборот-->
                <form action="">
                    <select name="" id="">
                        <option value="">Обычная сортировка</option>
                        <option value="">По популярности</option>
                        <option value="">По рейтингу</option>
                        <option value="">По возрастанию цены</option>
                        <option value="">По убыванию цены</option>
                    </select>
                </form>
            </div>
            <div class="parent1">

            </div>
            <div class="pages-container">
                <li class="pages-button" onclick="nextPage(-1)">&#10094;</li>
                <ul class="pages">
    
                </ul>
                <li class="pages-button" onclick="nextPage(1)">&#10095;</li>
            </div>
        </div>
        
    </div>
<script src="/scripts/products-manager.js"></script>
<script>
    const productData = JSON.parse(decodeURIComponent('<%- productData %>'));

    if (productData) {
        setLists(productData).then(() => {
            goToPage(1);
        });
    } else {
        console.error("Error: productData is undefined or null");
    }

</script>
<script src="/scripts/search.js"></script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<%- include('blocks/footer') -%>
</body>
</html>