                <div class="buttons-menu">
                    <a class="profile1" onclick="setActive('con-block-goods')">
                        <p><ion-icon name="list-outline" class="display"></ion-icon>Товары</p>
                    </a>
                </div>
                <div class="buttons-menu">
                    <a class="profile1" onclick="setActive('con-block-photos')">
