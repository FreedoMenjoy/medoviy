                </div>
                <div class="buttons-menu">
                    <p class="text-a">Аналитика</p>
                    <a class="profile1" onclick="setActive('con-block-analitic')">
                        <p><ion-icon name="stats-chart-outline" class="display"></ion-icon>Аналитика</p>
                    </a>
                </div>
            </div>
            <div class="con-block-all">
                <div id="con-block-settings" class="con-block-hv">
                    <p></p>
                </div>
                <div id="con-block-order" class="con-block-hv">
                    <p></p>
                </div>
                <div id="con-block-rates" class="con-block-hv">
                    <p></p>
                </div>
                <div id="con-block-questions" class="con-block-hv">
                    <p></p>
                </div>
                <div id="con-block-category" class="con-block-hv">
                    <button>
                        Добавить
                    </button>
                    <div class="category-info">
                        <div class="name">Название</div>
                        <div class="category-strong">
                            <p>Количество товаров:</p>
                            <p>23</p>
                        </div>
                        <div class="category-strong">
                            <p>Сила категории (от 0 до 2):</p>
                            <p>1</p>
                        </div>
                        <ion-icon name="trash-bin-outline" class="bin"></ion-icon>
                        <ion-icon name="pencil-outline" class="bin"></ion-icon>
                    </div>
